.col-sm-4
  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { method: :post, class: "well form-inline" }) do |f|
    = f.error_notification
    %fieldset
      %legend Forgot your password?
      .inputs
        = f.input :email, placeholder: "Email", label: false, :required => true
    .actions
      = f.button :submit, "Send me reset password instructions", class: "btn"
  = render :partial => "devise/shared/links"
