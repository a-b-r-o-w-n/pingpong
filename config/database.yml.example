# SQLite version 3.x
#   gem install sqlite3
#
#   Ensure the SQLite 3 gem is defined in your Gemfile
#   gem 'sqlite3'
development:
  adapter: postgresql
  database: fa_pingpong_dev
  pool: 5
  timeout: 5000
  host: localhost
  port: 5432
  user: postgres

# Warning: The database defined as "test" will be erased and
# re-generated from your development database when you run "rake".
# Do not set this db to the same as development or production.
test:
  adapter: postgresql
  database: fa_pingpong_test
  pool: 5
  timeout: 5000
  host: localhost
  port: 5432
  user: postgres

production:
  adapter: postgresql
  database: fa_pingpong
  pool: 5
  timeout: 5000
